<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="default" targetRuntime="MyBatis3Simple">
        <commentGenerator>
            <!-- 去除所有注释 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- 数据连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/driving_school?serverTimezone=GMT%2B8"
                        userId="root" password="root" />
        <!-- Model的位置 -->
        <javaModelGenerator targetPackage="com.sl.pojo.po"
                            targetProject="src/test/java" />
        <!-- XML的位置 -->
<!--        <sqlMapGenerator targetPackage="com.sl.mapper"-->
<!--                         targetProject="src/test/resources" />-->
        <!-- Mapper的位置 -->
<!--        <javaClientGenerator type="XMLMAPPER"-->
<!--                             targetPackage="com.sl.mapper"-->
<!--                             targetProject="src/test/java" />-->
        <!-- %代表所有表 -->
        <table tableName="%" />
        <!-- 指定表 -->
<!--        <table tableName="dict_type" />-->
<!--        <table tableName="dict_item" />-->
    </context>
</generatorConfiguration>
