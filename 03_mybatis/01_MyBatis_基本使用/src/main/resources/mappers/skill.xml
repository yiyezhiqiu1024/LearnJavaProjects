<!--    </select>-->

    <insert id="insert" parameterType="com.sl.bean.Skill">
        INSERT INTO skill(name, level) VALUES(#{name}, #{level})
    </insert>

    <insert id="insert2" parameterType="com.sl.bean.Skill">
        INSERT INTO skill(name, level) VALUES(#{name}, #{level})
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <insert id="insert3"
            useGeneratedKeys="true"
            keyProperty="id"
            parameterType="com.sl.bean.Skill">
        INSERT INTO skill(name, level) VALUES(#{name}, #{level})
    </insert>

    <update id="update" parameterType="com.sl.bean.Skill">
        UPDATE skill SET name = #{name}, level = #{level} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM skill WHERE id = #{id}
    </delete>

    <insert id="batchInsert"
            useGeneratedKeys="true"
            keyProperty="id"
            parameterType="List">
        INSERT INTO skill(name, level) VALUES
        <foreach collection="list" item="skill" separator=",">
            (#{skill.name}, #{skill.level})
        </foreach>
    </insert>

    <delete id="batchDelete" parameterType="List">
        DELETE FROM skill WHERE id IN (
        <foreach collection="list" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>

    <delete id="batchDelete2" parameterType="List">
        DELETE FROM skill WHERE id IN
        <foreach collection="array"
                 item="id"
                 open="("
                 close=")"
                 separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>